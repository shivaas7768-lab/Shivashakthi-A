package Acharya.classes;

public class AdjacentEqualCount {

    public static void main(String[] args) {
        int[] arr = {5, 5, 3, 8, 8, 8, 2, 2, 9};

        int count = 0;

        for (int i = 0; i < arr.length - 1; i++) {
            if (arr[i] == arr[i + 1]) {
                count++;
            }
        }

        System.out.println("Count of adjacent equal elements: " + count);
    }
}
